{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/main/index.ts",
    "src/preload/index.ts",
    "src/renderer/main.tsx",
    "scripts/*.{js,mjs}",
    "electron.vite.config.ts"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "out/**",
    "dist/**",
    "release/**",
    "drizzle/**",
    "resources/**"
  ],
  "paths": {
    "@/*": ["./src/renderer/*"],
    "@shared/*": ["./src/shared/*"],
    "@main/*": ["./src/main/*"]
  },
  "ignoreDependencies": [
    "electron-rebuild"
  ]
}
